      }
    },
*/

  ],
  "parameters": [
    {
      "name": "FUSE_CONTAINER_NAME",
      "description": "Fuse Container Name",
      "value": "fuse-fabric8"
    },
    {
      "name": "FABRIC_IMAGE",
      "description": "Fabric Docker Image",
      "value": "mrobson/fuse-fabric8"
    },
    {
      "name": "FABRIC_BASE_IMAGE",
      "description": "Fabric Base Docker Image",
      "value": "mrobson/fuse-base-install"
    },
    {
      "name": "FABRIC_IMAGE_VERSION",
      "description": "Fabric Docker Image Version",
      "value": "6.2.1.84"
    },
    {
      "name": "Fabic_IMAGE_GIT_REPO",
      "description": "Fabric Standalone Image Git Repo",
      "value": "https://github.com/mrobson/fuse-fabric8.git"
    }
  ],
  "labels": {
    "template": "fuse-fabric8-6.2.1.84"
  }
}
